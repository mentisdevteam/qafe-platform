<application-mapping xmlns="http://qafe.com/schema"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://qafe.com/schema http://www.qafe.com/schema/application-mapping.xsd">

	<presentation-tier>
		<view>
			<window id="helloWorld" displayname="Hello World" width="300"
				height="250">
				<rootpanel id="rootPanelId">
					<verticallayout>
						<button id="clickMeButtonId" displayname="Click me" />
						<button id="clickMeTooButtonId" displayname="Click me too" />
					</verticallayout>
				</rootpanel>
				<events>
					<event id="clickMeEventId">
						<listeners>
							<listenergroup>
								<component ref="clickMeButtonId" />
								<listener type="onclick" />
							</listenergroup>
						</listeners>
						<business-action ref="SHOWERROR">
							<out name="OUTPUT" ref="OUTPUT" />
						</business-action>
						<dialog type="info">
							<title value="Hello Dialog" />
							<message value="Hello World!" />
						</dialog>
						<error-handler error-ref="Exception" id="Exception" final-action="swallow">
							<dialog>
								<title value="1"></title>
								<message value="${$ERROR_MESSAGE}"></message>
							</dialog>
						</error-handler>
					</event>
					
					<event id="clickMeTooEventId">
						<listeners>
							<listenergroup>
								<component ref="clickMeTooButtonId" />
								<listener type="onclick" />
							</listenergroup>
						</listeners>
						<business-action ref="SHOWERROR2">
							<out name="OUTPUT" ref="OUTPUT" />
						</business-action>
						<error-handler error-ref="Exception" id="Exception" final-action="swallow">
							<dialog>
								<title value="1"></title>
								<message value="${$ERROR_MESSAGE}"></message>
							</dialog>
						</error-handler>
					</event>					
				</events>
			</window>
		</view>
	</presentation-tier>

	<business-tier>
		<business-actions>
			<business-action id="SHOWERROR">
				<transaction managed="no" />
				<service ref="TEST" method-ref="SHOWERROR">
					<out name="OUTPUT" ref="OUTPUT" />
				</service>
			</business-action>
			
			<business-action id="SHOWERROR2">
				<transaction managed="no" />
				<service ref="TEST2" method-ref="TESTERROR2">
					<out name="OUTPUT" ref="OUTPUT" />
				</service>
			</business-action>			
		</business-actions>
	</business-tier>

	<integration-tier>
		<services>
			<service id="TEST" resource-ref="FORM_DB_CONNECTION">
				<method id="SHOWERROR" name="SHOWERROR">
					<out name="OUTPUT" />
				</method>
			</service>
			
			<service id="TEST2" resource-ref="CommonServices">
				<method id="TESTERROR2" name="TESTERROR2">
					<out name="OUTPUT" />
				</method>
			</service>			
		</services>
		<errors>
			<error exception="Exception" id="Exception"/>
		</errors>
	</integration-tier>

	<resource-tier>
		<resources>
			<drivermanager-datasource id="FORM_DB_CONNECTION"
				statements-file-url="statements.xml"
				url="jdbc:oracle:thin:@qloudoem.qualogy.sr:1521:orcl" username="mentis63_prod"
				password="mentis63_prod" driver-classname="oracle.jdbc.OracleDriver" />
			<javaclass classname="utils.CommonServices" id="CommonServices"/>
		</resources>
	</resource-tier>
</application-mapping> 
