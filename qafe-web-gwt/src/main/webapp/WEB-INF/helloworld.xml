<application-mapping xmlns="http://qafe.com/schema"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://qafe.com/schema http://www.qafe.com/schema/application-mapping.xsd">
	<presentation-tier>
		<view>
		<!-- demo app -->
			<window id="window1" displayname="Hello World" width="300"  height="250" >
				<rootpanel id="myRootPanel">
					<verticallayout>
						<button id="btnOpenWindow" displayname="Open" />						
					</verticallayout>
				</rootpanel>
				<events>
					<event id="sourceCodeEvent">
	  					<listeners>
	  						<listenergroup>
	  							<component ref="btnOpenWindow"/>
	  							<listener type="onclick"/>
	  						</listenergroup>
	  					</listeners>	  					
	  					<openwindow>
	  						<ref value="window2"/>
	  					</openwindow>	  					   				
	  				</event>
				</events>
			</window>
			<window id="window2" displayname="FORM" width="1300"  height="800" >
				<rootpanel id="myRootPanel">
					<verticallayout>
						<textfield id="txtInterface">
							<value>SELECTEREN RELATIE</value>
						</textfield>
						<textfield id="txtRaadplegen">
							<value>J</value>
						</textfield>
						<button id="btnCall" displayname="Call" />
						<frame id="iframeId" src="form.html" width="1300" height="800"/>
					</verticallayout>
				</rootpanel>
				<events>
					<event>
	  					<listeners>
	  						<listenergroup>
	  							<component ref="window2"/>
	  							<listener type="onload"/>
	  						</listenergroup>
							<listenergroup>
	  							<component ref="btnCall"/>
	  							<listener type="onclick"/>
	  						</listenergroup>
	  					</listeners>
	  					<call-script function="callForm">
							<param value="" />
	  						<param ref="txtInterface" src="component"/>
	  						<param ref="txtRaadplegen" src="component"/>
	  					</call-script>  					
	  				</event>
				</events>
			</window>
		</view>
	</presentation-tier>
</application-mapping> 
